# Production Environment Configuration Template
# Copy this file to .env and fill with actual production values

# App
APP_NAME=MCP Gateway
DEBUG=False

# Database - Use strong password and connection pooling
DATABASE_URL=postgresql+asyncpg://mcp_user:CHANGE_ME_STRONG_PASSWORD@db:5432/mcp_gateway

# Security - CRITICAL: Generate strong secrets for production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=CHANGE_ME_USE_STRONG_SECRET_AT_LEAST_32_CHARS
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# MCP
MCP_LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# Embedding Model Cache (optional - speeds up startup)
# SENTENCE_TRANSFORMERS_HOME=/app/.cache/sentence_transformers
