
# Copy to .env for production or .env.development for local dev

# App
APP_NAME=MCP Gateway
DEBUG=False

# Database
POSTGRES_USER=mcp_user
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DB=mcp_gateway
DATABASE_URL=postgresql+asyncpg://mcp_user:CHANGE_ME_IN_PRODUCTION@db:5432/mcp_gateway

# Security
JWT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# MCP
MCP_LOG_LEVEL=INFO

# Docker Compose
GATEWAY_PUBLIC_URL=http://localhost:8000
SENTENCE_TRANSFORMERS_HOME=/app/model_cache/sentence_transformers
HF_HOME=/app/model_cache/huggingface
HF_HUB_CACHE=/app/model_cache/huggingface/hub
